@model UpdateProductDetailDto
@{
    ViewData["Title"] = "UpdateProductDetail";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}
<section class="content container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="chart-box">
                <h4>Ürün Açıklama ve Bilgi Güncelleme Sayfası</h4>
                <br />
                <div class="bs-example" data-example-id="bordered-table">
                    <form method="post">
                        <input type="hidden" class="form-control" asp-for="ProductID" readonly />
                        <input type="hidden" class="form-control" asp-for="ProductDetailID" readonly />
                        <label>Ürün Açıklaması</label>
                        <textarea class="form-control" asp-for="ProductDescription" rows="5"></textarea>
                        <br />
                        <label>Ürün Bilgisi</label>
                        <textarea class="form-control" asp-for="ProductInfo" rows="5"></textarea>
                        <br />
                        <button class="btn btn-success">Ürünü Güncelle</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>